<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LanguageActivity" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolLanguage"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="@string/bike_sharing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.bikesharing.LanguageActivity">

    <ImageView
        android:layout_width="49dp"
        android:layout_height="33dp"
        android:src="@drawable/ic_all"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="167dp"
        android:id="@+id/imageView2"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_en"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="82dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="163dp"
        android:id="@+id/imageView3"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="33dp"
        android:src="@drawable/ic_fr"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="74dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="163dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/FR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/francais"
        android:onClick="changeToFR"
        app:layout_constraintLeft_toRightOf="@+id/ENG"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="217dp"
        tools:ignore="RtlHardcoded" />


    <Button
        android:id="@+id/ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/german"
        android:onClick="changeToALL"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="217dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/ENG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/english"
        android:onClick="changeToEN"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="217dp"
        app:layout_constraintLeft_toRightOf="@+id/ALL"
        android:layout_marginLeft="44dp"
        tools:ignore="RtlHardcoded" />

</android.support.constraint.ConstraintLayout>
</LinearLayout>