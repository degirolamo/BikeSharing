<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtuser"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_weight="316.52"
        android:text="User"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="-12dp" />

    <ImageButton
        android:id="@+id/imglist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="61.75"
        app:srcCompat="@drawable/list"
        app:layout_constraintRight_toLeftOf="@+id/imgadmin"
        android:layout_marginRight="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/imgadmin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="63.21"
        app:srcCompat="@drawable/admin"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/imgdelete"
        android:layout_marginRight="0dp" />

    <ImageButton
        android:id="@+id/imgdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="73.32"
        app:srcCompat="@drawable/delete"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>